<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.PrepareFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgPrepare"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_notification_purple"
            android:layout_marginBottom="7dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtGuide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_title"
            android:textSize="16dp"
            android:text="서비스 준비"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/imgPrepare"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
