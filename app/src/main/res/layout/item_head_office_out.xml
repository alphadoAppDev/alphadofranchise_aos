<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewGuide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.88"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCell00"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="12dp"
            android:autoSizeMinTextSize="8dp"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:textColor="@color/main_black"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_constraintStart_toStartOf="@+id/viewGuide"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.21" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCell01"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/main_black"
            android:textSize="12dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_constraintTop_toTopOf="@+id/txtCell00"
            app:layout_constraintBottom_toBottomOf="@+id/txtCell00"
            app:layout_constraintEnd_toStartOf="@+id/txtCell02"
            app:layout_constraintWidth_percent="0.186"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCell02"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/main_black"
            android:textSize="12dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_constraintTop_toTopOf="@+id/txtCell00"
            app:layout_constraintBottom_toBottomOf="@+id/txtCell00"
            app:layout_constraintEnd_toStartOf="@+id/txtCell03"
            app:layout_constraintWidth_percent="0.186"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCell03"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/main_black"
            android:textSize="12dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_constraintTop_toTopOf="@+id/txtCell00"
            app:layout_constraintBottom_toBottomOf="@+id/txtCell00"
            app:layout_constraintEnd_toStartOf="@+id/txtCell04"
            app:layout_constraintWidth_percent="0.186"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCell04"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/main_black"
            android:textSize="12dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_constraintTop_toTopOf="@+id/txtCell00"
            app:layout_constraintBottom_toBottomOf="@+id/txtCell00"
            app:layout_constraintEnd_toEndOf="@+id/viewGuide"
            app:layout_constraintWidth_percent="0.11"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCell10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="12dp"
            android:autoSizeMinTextSize="8dp"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:textColor="@color/main_black"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_constraintDimensionRatio="1:0.33"
            app:layout_constraintStart_toStartOf="@+id/viewGuide"
            app:layout_constraintTop_toBottomOf="@+id/txtCell00"
            app:layout_constraintWidth_percent="0.21" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCell11"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/main_black"
            android:autoSizeMaxTextSize="12dp"
            android:autoSizeMinTextSize="8dp"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeTextType="uniform"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_constraintTop_toTopOf="@+id/txtCell10"
            app:layout_constraintBottom_toBottomOf="@+id/txtCell10"
            app:layout_constraintEnd_toStartOf="@+id/txtCell12"
            app:layout_constraintWidth_percent="0.186"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCell12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/main_black"
            android:autoSizeMaxTextSize="12dp"
            android:autoSizeMinTextSize="8dp"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeTextType="uniform"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_constraintTop_toTopOf="@+id/txtCell10"
            app:layout_constraintBottom_toBottomOf="@+id/txtCell10"
            app:layout_constraintEnd_toStartOf="@+id/txtCell13"
            app:layout_constraintWidth_percent="0.186"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCell13"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/main_black"
            android:autoSizeMaxTextSize="12dp"
            android:autoSizeMinTextSize="8dp"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeTextType="uniform"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_constraintTop_toTopOf="@+id/txtCell10"
            app:layout_constraintBottom_toBottomOf="@+id/txtCell10"
            app:layout_constraintEnd_toStartOf="@+id/txtCell14"
            app:layout_constraintWidth_percent="0.186"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCell14"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/main_black"
            android:autoSizeMaxTextSize="12dp"
            android:autoSizeMinTextSize="8dp"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeTextType="uniform"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_constraintTop_toTopOf="@+id/txtCell10"
            app:layout_constraintBottom_toBottomOf="@+id/txtCell10"
            app:layout_constraintEnd_toEndOf="@+id/viewGuide"
            app:layout_constraintWidth_percent="0.11"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnBottom"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_dropdown_gray"
            android:background="@android:color/transparent"
            android:layout_marginTop="4.4dp"
            app:layout_constraintTop_toBottomOf="@+id/moreRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/moreRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/txtCell10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/stroke_grey"
            app:layout_constraintTop_toBottomOf="@+id/txtCell00"
            app:layout_constraintStart_toStartOf="@+id/txtCell00"
            app:layout_constraintEnd_toEndOf="@+id/txtCell04"/>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/stroke_grey"
            app:layout_constraintTop_toBottomOf="@+id/txtCell10"
            app:layout_constraintStart_toStartOf="@+id/txtCell10"
            app:layout_constraintEnd_toEndOf="@+id/txtCell14"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
