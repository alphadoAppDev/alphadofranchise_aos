<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Alphadopetshop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Common" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here.-->
        <item name="colorAccent">@color/point_color</item>

        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:datePickerStyle">@style/MySpinnerDatePickerStyle</item>-->
        <item name="android:textCursorDrawable">@drawable/custom_text_cursor</item>
        <item name="android:textSelectHandle">@color/point_color</item>
        <item name="android:textColorHighlight">@color/point_color</item>

        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>

        <item name="android:colorPrimaryDark">@color/white</item>
    </style>

    <!-- Custom font 적용 -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="customEditTextFontStyle" parent="@style/editTheme">
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="editTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/font_title</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor_drawable</item>
        <item name="colorControlActivated">@color/point_sub_2</item>
        <item name="android:textColorHighlight">@color/point_sub_2</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/font_sub</item>
        <item name="colorControlActivated">@color/rating_yellow</item>
    </style>
</resources>